{
  "$schema": "https://swc.rs/schema.json",
  "module": {
    "type": "es6"
  },
  "jsc": {
    "target": "es2018",
    "loose": true,
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "dynamicImport": true
    },
    "transform": {
      "react": {
        "runtime": "automatic",
        "throwIfNamespace": true,
        "development": false
      },
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "externalHelpers": true,
    "baseUrl": "./src"
  },
  "minify": false
}
